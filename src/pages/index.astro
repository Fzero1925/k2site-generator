---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const recentPosts = posts
  .sort((a: any, b: any) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 6);

const config = (await import('@/lib/config')).getConfig();
---

<BaseLayout title="首页" description="欢迎来到我们的内容聚合平台">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          欢迎来到 <span class="text-blue-600">{config.site.name}</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          发现高质量内容，学习前沿知识，掌握实用技能。我们为您精心整理最有价值的信息和资源。
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#latest-posts" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            浏览最新内容
            <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <a href="/about" class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            了解更多
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">为什么选择我们</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          我们致力于提供高质量、实用性强的内容，帮助您在各个领域获得成长
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">高质量内容</h3>
          <p class="text-gray-600">精心筛选和编写的内容，确保信息准确性和实用性</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">快速更新</h3>
          <p class="text-gray-600">紧跟最新趋势，定期更新内容，保持信息的时效性</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">系统性学习</h3>
          <p class="text-gray-600">结构化的知识体系，从基础到进阶的完整学习路径</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Posts Section -->
  <section id="latest-posts" class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">最新文章</h2>
        <p class="text-lg text-gray-600">
          探索我们最新发布的高质量内容
        </p>
      </div>

      {recentPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {recentPosts.map((post: any) => (
            <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
              {post.data.image && (
                <img 
                  src={post.data.image} 
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                  loading="lazy"
                />
              )}
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 mb-2">
                  <time datetime={post.data.date}>
                    {new Date(post.data.date).toLocaleDateString('zh-CN')}
                  </time>
                  <span class="mx-2">·</span>
                  <span>{post.data.category}</span>
                </div>
                
                <h3 class="text-xl font-semibold text-gray-900 mb-2">
                  <a href={`/${post.slug}`} class="hover:text-blue-600 transition-colors">
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-gray-600 mb-4">
                  {post.data.description}
                </p>
                
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-1">
                    {post.data.tags?.slice(0, 2).map((tag: string) => (
                      <span class="inline-block bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                  
                  <a 
                    href={`/${post.slug}`}
                    class="text-blue-600 hover:text-blue-800 text-sm font-medium inline-flex items-center"
                  >
                    阅读更多
                    <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-medium text-gray-900 mb-2">暂无内容</h3>
          <p class="text-gray-600 mb-4">
            还没有发布任何文章。使用 K2Site CLI 生成您的第一篇内容吧！
          </p>
          <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg text-left max-w-md mx-auto text-sm">
k2site generate -k "您的关键词"</pre>
        </div>
      )}

      {recentPosts.length > 0 && (
        <div class="text-center mt-12">
          <a 
            href="/posts" 
            class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors"
          >
            查看全部文章
            <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      )}
    </div>
  </section>
</BaseLayout>